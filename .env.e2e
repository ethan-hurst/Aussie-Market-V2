# E2E Testing Environment Configuration
# This file is used specifically for end-to-end testing with mock services

# Environment mode
NODE_ENV=test
E2E_TESTING=true

# Application URLs
PUBLIC_APP_URL=http://localhost:5173
PLAYWRIGHT_BASE_URL=http://localhost:5173

# Mock Supabase Configuration (for E2E testing)
PUBLIC_SUPABASE_URL=http://localhost:5173/api/mock/supabase
PUBLIC_SUPABASE_ANON_KEY=mock-anon-key-for-e2e-testing
SUPABASE_SERVICE_ROLE_KEY=mock-service-role-key-for-e2e-testing

# Mock Stripe Configuration (for E2E testing) 
STRIPE_SECRET_KEY=sk_test_mock_e2e_key
STRIPE_PUBLISHABLE_KEY=pk_test_mock_e2e_key
STRIPE_WEBHOOK_SECRET=whsec_mock_e2e_webhook_secret
PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_mock_e2e_key

# Database Configuration (using mock)
SUPABASE_DB_PASSWORD=mock-db-password-e2e

# Mock Service URLs
MOCK_STRIPE_WEBHOOK_URL=http://localhost:5173/api/mock/stripe/webhook
MOCK_SUPABASE_AUTH_URL=http://localhost:5173/api/mock/supabase/auth

# Test Data Configuration
E2E_TEST_USER_EMAIL=test@example.com
E2E_TEST_SELLER_EMAIL=seller@example.com  
E2E_TEST_ADMIN_EMAIL=admin@example.com

# Performance and Timeout Settings
E2E_SERVER_TIMEOUT=30000
E2E_TEST_TIMEOUT=60000

# Logging
VITE_LOG_LEVEL=warn
SENTRY_ENVIRONMENT=e2e-testing

# Disable real external services
DISABLE_SENTRY=true
DISABLE_REAL_STRIPE=true
DISABLE_REAL_SUPABASE=true

# Mock server health check
MOCK_HEALTH_CHECK_URL=http://localhost:5173/api/mock/health